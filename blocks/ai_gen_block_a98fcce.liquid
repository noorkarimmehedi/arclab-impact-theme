{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-tabs-{{ ai_gen_id }} {
    padding: {{ block.settings.vertical_padding }}px 0;
  }

  .ai-collection-tabs__title-{{ ai_gen_id }} {
    text-align: left;
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
    font-weight: {{ block.settings.title_font.weight }};
    font-size: {{ block.settings.title_font_size }}px;
    color: {{ block.settings.title_color }};
    margin-bottom: 40px;
    padding: 0 30px;
  }

  .ai-collection-tabs__header-{{ ai_gen_id }} {
    overflow-x: auto;
    overflow-y: hidden;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    margin-bottom: 40px;
  }

  .ai-collection-tabs__header-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-collection-tabs__nav-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.heading_gap }}px;
    padding: 0 30px;
    min-width: min-content;
  }

  .ai-collection-tabs__tab-{{ ai_gen_id }} {
    flex-shrink: 0;
    padding: {{ block.settings.heading_vertical_padding }}px {{ block.settings.heading_horizontal_padding }}px;
    background-color: {{ block.settings.heading_bg_color }};
    color: {{ block.settings.heading_text_color }};
    border: {{ block.settings.heading_border_width }}px solid {{ block.settings.heading_border_color }};
    border-radius: {{ block.settings.heading_border_radius }}px;
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.heading_font_size }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .ai-collection-tabs__tab-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.heading_hover_bg_color }};
    color: {{ block.settings.heading_hover_text_color }};
    border-color: {{ block.settings.heading_hover_border_color }};
  }

  .ai-collection-tabs__tab-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.heading_active_bg_color }};
    color: {{ block.settings.heading_active_text_color }};
    border-color: {{ block.settings.heading_active_border_color }};
  }

  .ai-collection-tabs__content-{{ ai_gen_id }} {
    padding: 0 30px;
  }

  .ai-collection-tabs__panel-{{ ai_gen_id }} {
    display: none;
  }

  .ai-collection-tabs__panel-{{ ai_gen_id }}.active {
    display: block;
  }

  .ai-collection-tabs__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
  }

  /* Product Card Styling with Glass Morphism */
  .ai-product-card-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;
    background: transparent;
  }

  .ai-product-card__link-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .ai-product-card__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    padding-bottom: {{ block.settings.image_aspect_ratio }}%;
  }

  .ai-product-card__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.6s ease;
  }

  .ai-product-card__link-{{ ai_gen_id }}:hover .ai-product-card__image-{{ ai_gen_id }} {
    transform: scale(1.1);
  }

  /* Glass Morphism Info Card */
  .ai-product-card__info-{{ ai_gen_id }} {
    position: {{ block.settings.glass_position }};
    {% if block.settings.glass_position == 'absolute' %}
      bottom: {{ block.settings.glass_bottom_offset }}px;
      left: {{ block.settings.glass_side_offset }}px;
      right: {{ block.settings.glass_side_offset }}px;
    {% else %}
      margin-top: {{ block.settings.glass_top_spacing }}px;
    {% endif %}
    background: {{ block.settings.glass_background }};
    backdrop-filter: blur({{ block.settings.glass_blur }}px);
    -webkit-backdrop-filter: blur({{ block.settings.glass_blur }}px);
    border: {{ block.settings.glass_border_width }}px solid {{ block.settings.glass_border_color }};
    border-radius: {{ block.settings.glass_border_radius }}px;
    padding: {{ block.settings.glass_padding }}px;
    box-shadow: {{ block.settings.glass_shadow_x }}px {{ block.settings.glass_shadow_y }}px {{ block.settings.glass_shadow_blur }}px {{ block.settings.glass_shadow_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 10px;
  }

  .ai-product-card__link-{{ ai_gen_id }}:hover .ai-product-card__info-{{ ai_gen_id }} {
    transform: translateY(-{{ block.settings.glass_hover_lift }}px);
    box-shadow: {{ block.settings.glass_shadow_x }}px {{ block.settings.glass_shadow_y | plus: 4 }}px {{ block.settings.glass_shadow_blur | plus: 8 }}px {{ block.settings.glass_shadow_color }};
  }

  .ai-product-card__content-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-product-card__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    font-weight: 500;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 {{ block.settings.title_price_spacing }}px;
    line-height: 1.3;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .ai-product-card__price-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-wrap: wrap;
  }

  .ai-product-card__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    font-weight: 600;
    color: {{ block.settings.product_price_color }};
    margin: 0;
  }

  .ai-product-card__price--sale-{{ ai_gen_id }} {
    color: {{ block.settings.sale_price_color }};
  }

  .ai-product-card__compare-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size | times: 0.85 }}px;
    color: {{ block.settings.compare_price_color }};
    text-decoration: line-through;
    opacity: 0.7;
  }

  /* Add to Cart Button - Glass Style */
  .ai-product-card__add-to-cart-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.atc_button_size }}px;
    height: {{ block.settings.atc_button_size }}px;
    border-radius: {{ block.settings.atc_button_radius }}px;
    background-color: {{ block.settings.atc_button_bg }};
    border: {{ block.settings.atc_button_border_width }}px solid {{ block.settings.atc_button_border_color }};
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    padding: 0;
    position: relative;
    z-index: 5;
  }

  .ai-product-card__add-to-cart-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.atc_button_bg_hover }};
    transform: scale(1.1);
  }

  .ai-product-card__add-to-cart-{{ ai_gen_id }}:active {
    transform: scale(0.95);
  }

  .ai-product-card__add-to-cart-{{ ai_gen_id }} svg {
    width: {{ block.settings.atc_icon_size }}px;
    height: {{ block.settings.atc_icon_size }}px;
    stroke: {{ block.settings.atc_icon_color }};
    stroke-width: 2;
    fill: none;
    transition: stroke 0.3s ease;
  }

  .ai-product-card__add-to-cart-{{ ai_gen_id }}:hover svg {
    stroke: {{ block.settings.atc_icon_color_hover }};
  }

  .ai-product-card__add-to-cart-{{ ai_gen_id }}.is-loading {
    pointer-events: none;
  }

  .ai-product-card__add-to-cart-{{ ai_gen_id }}.is-loading svg {
    animation: ai-spin-{{ ai_gen_id }} 1s linear infinite;
  }

  .ai-product-card__add-to-cart-{{ ai_gen_id }}.is-added svg {
    stroke: {{ block.settings.atc_success_color }};
  }

  @keyframes ai-spin-{{ ai_gen_id }} {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .ai-collection-tabs__empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #999;
    font-style: italic;
  }

  @media screen and (min-width: 750px) {
    .ai-collection-tabs__nav-{{ ai_gen_id }} {
      justify-content: center;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-collection-tabs__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 15px;
    }

    .ai-collection-tabs__nav-{{ ai_gen_id }} {
      padding: 0 25px 0 0;
    }

    .ai-collection-tabs__content-{{ ai_gen_id }} {
      padding: 0 25px;
    }

    .ai-collection-tabs__title-{{ ai_gen_id }} {
      padding: 0 25px;
    }

    .ai-product-card__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_title_size | times: 0.85 }}px;
      -webkit-line-clamp: 1;
    }

    .ai-product-card__price-{{ ai_gen_id }} {
      font-size: {{ block.settings.price_size | times: 0.85 }}px;
    }

    .ai-product-card__info-{{ ai_gen_id }} {
      padding: {{ block.settings.glass_padding | times: 0.7 }}px;
      {% if block.settings.glass_position == 'absolute' %}
        bottom: {{ block.settings.glass_bottom_offset | times: 0.6 }}px;
        left: {{ block.settings.glass_side_offset | times: 0.6 }}px;
        right: {{ block.settings.glass_side_offset | times: 0.6 }}px;
      {% endif %}
    }

    .ai-product-card__add-to-cart-{{ ai_gen_id }} {
      width: {{ block.settings.atc_button_size | times: 0.85 }}px;
      height: {{ block.settings.atc_button_size | times: 0.85 }}px;
    }

    .ai-product-card__add-to-cart-{{ ai_gen_id }} svg {
      width: {{ block.settings.atc_icon_size | times: 0.85 }}px;
      height: {{ block.settings.atc_icon_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<collection-tabs-{{ ai_gen_id }} class="ai-collection-tabs-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.section_title != blank %}
    <h2 class="ai-collection-tabs__title-{{ ai_gen_id }}">
      {{ block.settings.section_title }}
    </h2>
  {% endif %}

  <div class="ai-collection-tabs__header-{{ ai_gen_id }}">
    <div class="ai-collection-tabs__nav-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign collection_key = 'collection_' | append: i
          assign heading_key = 'heading_' | append: i
          assign collection = block.settings[collection_key]
          assign heading = block.settings[heading_key]
        %}
        
        {% if collection != blank and heading != blank %}
          <button
            class="ai-collection-tabs__tab-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
            data-tab="{{ i }}"
            aria-label="{{ heading }}"
          >
            {{ heading }}
          </button>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <div class="ai-collection-tabs__content-{{ ai_gen_id }}">
    {% for i in (1..6) %}
      {% liquid
        assign collection_key = 'collection_' | append: i
        assign heading_key = 'heading_' | append: i
        assign collection = block.settings[collection_key]
        assign heading = block.settings[heading_key]
      %}
      
      {% if collection != blank and heading != blank %}
        <div
          class="ai-collection-tabs__panel-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
          data-panel="{{ i }}"
        >
          {% if collection.products.size > 0 %}
            <div class="ai-collection-tabs__grid-{{ ai_gen_id }}">
              {% for product in collection.products limit: block.settings.products_per_collection %}
                <div class="ai-product-card-{{ ai_gen_id }}">
                  <a href="{{ product.url }}" class="ai-product-card__link-{{ ai_gen_id }}">
                    <div class="ai-product-card__image-wrapper-{{ ai_gen_id }}">
                      {% if product.featured_image %}
                        <img
                          src="{{ product.featured_image | image_url: width: 500 }}"
                          alt="{{ product.featured_image.alt | escape }}"
                          loading="lazy"
                          class="ai-product-card__image-{{ ai_gen_id }}"
                          width="500"
                          height="500"
                        >
                      {% else %}
                        <div style="background: #f5f5f5; width: 100%; height: 100%; display: flex; align-items: center; justify-content: center;">
                          {{ 'product-1' | placeholder_svg_tag }}
                        </div>
                      {% endif %}
                    </div>
                    
                    <div class="ai-product-card__info-{{ ai_gen_id }}">
                      <div class="ai-product-card__content-{{ ai_gen_id }}">
                        <h3 class="ai-product-card__title-{{ ai_gen_id }}">
                          {{ product.title }}
                        </h3>
                        
                        <div class="ai-product-card__price-wrapper-{{ ai_gen_id }}">
                          {% if product.compare_at_price > product.price %}
                            <span class="ai-product-card__price-{{ ai_gen_id }} ai-product-card__price--sale-{{ ai_gen_id }}">
                              {{ product.price | money }}
                            </span>
                            <span class="ai-product-card__compare-price-{{ ai_gen_id }}">
                              {{ product.compare_at_price | money }}
                            </span>
                          {% else %}
                            <span class="ai-product-card__price-{{ ai_gen_id }}">
                              {{ product.price | money }}
                            </span>
                          {% endif %}
                        </div>
                      </div>

                      {% if product.available %}
                        <button 
                          type="button"
                          class="ai-product-card__add-to-cart-{{ ai_gen_id }}"
                          data-variant-id="{{ product.first_available_variant.id }}"
                          data-product-title="{{ product.title | escape }}"
                          aria-label="Add {{ product.title | escape }} to cart"
                          onclick="event.preventDefault(); event.stopPropagation(); aiTabsAddToCart{{ ai_gen_id }}(this);"
                        >
                          <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <line x1="12" y1="5" x2="12" y2="19"></line>
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                          </svg>
                        </button>
                      {% endif %}
                    </div>
                  </a>
                </div>
              {% endfor %}
            </div>
          {% else %}
            <div class="ai-collection-tabs__empty-{{ ai_gen_id }}">
              This collection is empty. Add products to display them here.
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</collection-tabs-{{ ai_gen_id }}>

<script>
  (function() {
    class CollectionTabs{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.ai-collection-tabs__tab-{{ ai_gen_id }}');
        this.panels = this.querySelectorAll('.ai-collection-tabs__panel-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', () => {
            const tabId = tab.getAttribute('data-tab');
            this.switchTab(tabId);
          });
        });
      }

      switchTab(tabId) {
        this.tabs.forEach((tab) => {
          if (tab.getAttribute('data-tab') === tabId) {
            tab.classList.add('active');
          } else {
            tab.classList.remove('active');
          }
        });

        this.panels.forEach((panel) => {
          if (panel.getAttribute('data-panel') === tabId) {
            panel.classList.add('active');
          } else {
            panel.classList.remove('active');
          }
        });
      }
    }

    customElements.define('collection-tabs-{{ ai_gen_id }}', CollectionTabs{{ ai_gen_id }});
  })();

  // Add to Cart Function
  function aiTabsAddToCart{{ ai_gen_id }}(button) {
    const variantId = button.getAttribute('data-variant-id');
    const productTitle = button.getAttribute('data-product-title');
    
    if (!variantId) return;

    button.classList.add('is-loading');
    button.innerHTML = `
      <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <circle cx="12" cy="12" r="10" stroke-dasharray="32" stroke-dashoffset="32" fill="none"></circle>
      </svg>
    `;

    fetch('/cart/add.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'Accept': 'application/json'
      },
      body: JSON.stringify({
        id: parseInt(variantId),
        quantity: 1
      })
    })
    .then(response => {
      if (!response.ok) throw new Error('Network response was not ok');
      return response.json();
    })
    .then(data => {
      button.classList.remove('is-loading');
      button.classList.add('is-added');
      button.innerHTML = `
        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
      `;

      // Update cart count
      fetch('/cart.js', {
        method: 'GET',
        headers: { 'Accept': 'application/json' }
      })
      .then(res => res.json())
      .then(cart => {
        const cartCountElements = document.querySelectorAll('cart-count');
        cartCountElements.forEach(el => {
          el.textContent = cart.item_count;
        });

        const otherCartCounts = document.querySelectorAll('.header__cart-count, [data-cart-count], .cart-count-bubble span, .cart-count');
        otherCartCounts.forEach(el => {
          if (!el.tagName.toLowerCase().includes('cart-count')) {
            el.textContent = cart.item_count;
          }
        });

        document.documentElement.dispatchEvent(new CustomEvent('cart:refresh', {
          bubbles: true,
          detail: { cart: cart }
        }));
      });

      setTimeout(() => {
        button.classList.remove('is-added');
        button.innerHTML = `
          <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line>
          </svg>
        `;
      }, 2000);
    })
    .catch(error => {
      console.error('Error adding to cart:', error);
      button.classList.remove('is-loading');
      button.innerHTML = `
        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      `;

      setTimeout(() => {
        button.innerHTML = `
          <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line>
          </svg>
        `;
      }, 2000);
    });
  }
</script>

