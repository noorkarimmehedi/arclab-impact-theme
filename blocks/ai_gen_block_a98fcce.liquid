{% style %}
  .ai-collection-tabs-{{ ai_gen_id }} {
    padding: {{ block.settings.vertical_padding }}px 0;
  }

  .ai-collection-tabs__title-{{ ai_gen_id }} {
    text-align: left;
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
    font-weight: {{ block.settings.title_font.weight }};
    font-size: {{ block.settings.title_font_size }}px;
    color: {{ block.settings.title_color }};
    margin-bottom: 40px;
    padding: 0 30px;
  }

  .ai-collection-tabs__header-{{ ai_gen_id }} {
    overflow-x: auto;
    overflow-y: hidden;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    margin-bottom: 40px;
  }

  .ai-collection-tabs__header-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-collection-tabs__nav-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.heading_gap }}px;
    padding: 0 30px;
    min-width: min-content;
  }

  .ai-collection-tabs__tab-{{ ai_gen_id }} {
    flex-shrink: 0;
    padding: {{ block.settings.heading_vertical_padding }}px {{ block.settings.heading_horizontal_padding }}px;
    background-color: {{ block.settings.heading_bg_color }};
    color: {{ block.settings.heading_text_color }};
    border: {{ block.settings.heading_border_width }}px solid {{ block.settings.heading_border_color }};
    border-radius: {{ block.settings.heading_border_radius }}px;
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.heading_font_size }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .ai-collection-tabs__tab-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.heading_hover_bg_color }};
    color: {{ block.settings.heading_hover_text_color }};
    border-color: {{ block.settings.heading_hover_border_color }};
  }

  .ai-collection-tabs__tab-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.heading_active_bg_color }};
    color: {{ block.settings.heading_active_text_color }};
    border-color: {{ block.settings.heading_active_border_color }};
  }

  .ai-collection-tabs__content-{{ ai_gen_id }} {
    padding: 0 30px;
  }

  .ai-collection-tabs__panel-{{ ai_gen_id }} {
    display: none;
  }

  .ai-collection-tabs__panel-{{ ai_gen_id }}.active {
    display: block;
  }

  .ai-collection-tabs__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
  }

  /* Product Card Styling - Matching the design */
  .ai-product-card-{{ ai_gen_id }} {
    border: 1px solid #E0E0E0;
    border-radius: 4px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0);
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 100%;
    background: #fff;
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    border-color: #CCCCCC;
  }

  .ai-product-card__image-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: 4px 4px 0 0;
    flex-shrink: 0;
    aspect-ratio: 1;
  }

  .ai-product-card__image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: 4px 4px 0 0;
  }

  .ai-product-card__info-{{ ai_gen_id }} {
    padding: 12px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .ai-product-card__content-{{ ai_gen_id }} {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-product-card__title-{{ ai_gen_id }} {
    min-height: 40px;
    display: block;
    margin-bottom: 8px;
  }

  .ai-product-card__title-{{ ai_gen_id }} a {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: 1.4;
    max-height: calc(1.4em * 2);
    color: {{ block.settings.product_title_color }};
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
  }

  .ai-product-card__price-{{ ai_gen_id }} {
    min-height: 24px;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    font-size: 16px;
    font-weight: 600;
    color: {{ block.settings.product_price_color }};
    margin-bottom: 12px;
  }

  .ai-product-card__add-to-cart-{{ ai_gen_id }} {
    margin-top: auto;
    padding-top: 12px;
    width: 100%;
  }

  .ai-product-card__btn-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding: 10px 16px;
    outline: none;
    text-decoration: none;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    text-transform: uppercase;
    background-color: #0000FF;
    border: 1px solid #E0E0E0;
    border-radius: 0;
    color: #ffffff;
    font-weight: 500;
    font-size: 14px;
    letter-spacing: 0.7px;
    text-align: center;
    font-family: inherit;
    z-index: 0;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0);
    transition: all 0.3s cubic-bezier(0.02, 0.01, 0.47, 1);
    white-space: nowrap;
  }

  .ai-product-card__btn-{{ ai_gen_id }}:hover {
    border-color: #CCCCCC;
    animation: rotate624-{{ ai_gen_id }} 0.7s ease-in-out both;
  }

  @keyframes rotate624-{{ ai_gen_id }} {
    0% { transform: rotate(0deg) translate3d(0, 0, 0); }
    25% { transform: rotate(3deg) translate3d(0, 0, 0); }
    50% { transform: rotate(-3deg) translate3d(0, 0, 0); }
    75% { transform: rotate(1deg) translate3d(0, 0, 0); }
    100% { transform: rotate(0deg) translate3d(0, 0, 0); }
  }

  @keyframes storm1261-{{ ai_gen_id }} {
    0% { transform: translate3d(0, 0, 0) translateZ(0); }
    25% { transform: translate3d(4px, 0, 0) translateZ(0); }
    50% { transform: translate3d(-3px, 0, 0) translateZ(0); }
    75% { transform: translate3d(2px, 0, 0) translateZ(0); }
    100% { transform: translate3d(0, 0, 0) translateZ(0); }
  }

  .ai-product-card__btn-{{ ai_gen_id }} span {
    color: #ffffff;
    z-index: 20;
    animation: storm1261-{{ ai_gen_id }} 0.7s ease-in-out both;
    animation-delay: 0.06s;
  }

  .ai-product-card__btn-{{ ai_gen_id }}:after {
    background: #38ef7d;
    content: "";
    height: 155px;
    left: -75px;
    opacity: 0.4;
    position: absolute;
    top: -50px;
    transform: rotate(35deg);
    transition: all 550ms cubic-bezier(0.19, 1, 0.22, 1);
    width: 50px;
    z-index: -10;
  }

  .ai-product-card__btn-{{ ai_gen_id }}:hover:after {
    left: 120%;
    transition: all 550ms cubic-bezier(0.19, 1, 0.22, 1);
  }

  .ai-product-card__btn-{{ ai_gen_id }}:disabled,
  .ai-product-card__btn-{{ ai_gen_id }}--unavailable {
    background-color: #999999;
    cursor: not-allowed;
    opacity: 0.6;
  }

  .ai-collection-tabs__empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #999;
    font-style: italic;
  }

  @media screen and (min-width: 750px) {
    .ai-collection-tabs__nav-{{ ai_gen_id }} {
      justify-content: center;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-collection-tabs__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 15px;
    }

    .ai-collection-tabs__nav-{{ ai_gen_id }} {
      padding: 0 25px 0 0;
    }

    .ai-collection-tabs__content-{{ ai_gen_id }} {
      padding: 0 25px;
    }

    .ai-collection-tabs__title-{{ ai_gen_id }} {
