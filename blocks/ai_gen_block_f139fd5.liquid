{% comment %}
  Beanly Store Locator - Announcement Bar Style
  Neubrutalism UI with shadcn-style button tapping effect
{% endcomment %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-store-locator-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 20px 0 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-store-locator-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
  }

  .ai-store-locator-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-style: {{ block.settings.heading_font.style }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
    text-transform: uppercase;
    letter-spacing: -1px;
    white-space: nowrap;
  }

  .ai-store-locator-input-wrapper-{{ ai_gen_id }} {
    position: relative;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    background-color: {{ block.settings.input_background }};
    box-shadow: {{ block.settings.shadow_offset }}px {{ block.settings.shadow_offset }}px 0 {{ block.settings.shadow_color }};
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    flex-shrink: 0;
  }

  .ai-store-locator-input-wrapper-{{ ai_gen_id }}:focus-within {
    transform: translate(-2px, -2px);
    box-shadow: {{ block.settings.shadow_offset | plus: 2 }}px {{ block.settings.shadow_offset | plus: 2 }}px 0 {{ block.settings.shadow_color }};
  }

  .ai-store-locator-input-{{ ai_gen_id }} {
    width: 250px;
    padding: 12px 16px;
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: {{ block.settings.body_font.weight }};
    font-size: 14px;
    border: none;
    background: transparent;
    color: {{ block.settings.text_color }};
    outline: none;
  }

  .ai-store-locator-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  /* Shadcn-style neubrutalism button with tapping effect */
  .ai-store-locator-btn-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    padding: 12px 24px;
    cursor: pointer;
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: 700;
    text-transform: uppercase;
    font-size: 14px;
    border-radius: 5px;
    box-shadow: {{ block.settings.shadow_offset }}px {{ block.settings.shadow_offset }}px 0px 0px {{ block.settings.shadow_color }};
    transition: all 0.1s ease;
    text-decoration: none;
    position: relative;
    user-select: none;
    flex-shrink: 0;
  }

  /* Hover effect - moves button away from shadow, increasing shadow */
  .ai-store-locator-btn-{{ ai_gen_id }}:hover {
    transform: translate({{ block.settings.shadow_offset }}px, {{ block.settings.shadow_offset }}px);
    box-shadow: 0px 0px 0px 0px {{ block.settings.shadow_color }};
  }

  /* Active/Tap effect - button returns to original position (no transform, no shadow) */
  .ai-store-locator-btn-{{ ai_gen_id }}:active {
    transform: translate(0px, 0px);
    box-shadow: {{ block.settings.shadow_offset }}px {{ block.settings.shadow_offset }}px 0px 0px {{ block.settings.shadow_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-store-locator-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.5 }}px 8px 0 8px;
    }

    .ai-store-locator-container-{{ ai_gen_id }} {
      gap: 6px;
      flex-wrap: nowrap;
    }

    .ai-store-locator-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.5 }}px;
      letter-spacing: -0.5px;
      flex-shrink: 1;
      min-width: 0;
    }

    .ai-store-locator-input-wrapper-{{ ai_gen_id }} {
      box-shadow: {{ block.settings.shadow_offset | times: 0.7 }}px {{ block.settings.shadow_offset | times: 0.7 }}px 0 {{ block.settings.shadow_color }};
    }

    .ai-store-locator-input-wrapper-{{ ai_gen_id }}:focus-within {
      box-shadow: {{ block.settings.shadow_offset }}px {{ block.settings.shadow_offset }}px 0 {{ block.settings.shadow_color }};
    }

    .ai-store-locator-input-{{ ai_gen_id }} {
      width: 120px;
      padding: 8px 10px;
      font-size: 11px;
    }

    .ai-store-locator-btn-{{ ai_gen_id }} {
      padding: 8px 12px;
      font-size: 11px;
      box-shadow: {{ block.settings.shadow_offset | times: 0.7 }}px {{ block.settings.shadow_offset | times: 0.7 }}px 0px 0px {{ block.settings.shadow_color }};
    }

    .ai-store-locator-btn-{{ ai_gen_id }}:hover {
      transform: translate({{ block.settings.shadow_offset | times: 0.7 }}px, {{ block.settings.shadow_offset | times: 0.7 }}px);
    }

    .ai-store-locator-btn-{{ ai_gen_id }}:active {
      box-shadow: {{ block.settings.shadow_offset | times: 0.7 }}px {{ block.settings.shadow_offset | times: 0.7 }}px 0px 0px {{ block.settings.shadow_color }};
    }
  }
{% endstyle %}

<div class="ai-store-locator-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-store-locator-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-store-locator-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-store-locator-input-wrapper-{{ ai_gen_id }}">
      <input
        type="text"
        class="ai-store-locator-input-{{ ai_gen_id }}"
        placeholder="{{ block.settings.search_placeholder }}"
        aria-label="Search for stores"
      >
    </div>

    <a 
      href="{{ block.settings.maps_link }}" 
      class="ai-store-locator-btn-{{ ai_gen_id }}"
      target="_blank"
      rel="noopener noreferrer"
    >
      {{ block.settings.button_text }}
    </a>
  </div>
</div>

