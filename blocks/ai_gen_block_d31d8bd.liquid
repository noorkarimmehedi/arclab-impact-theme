{% doc %}
  @prompt
    create a hero section where the there will be a image, should have the option for desktop and mobile version upload section and below that there should be a another image section where there will have headline and sub heading option , for main image and secondary image should have the option for image size like portrait square like this , should have the option for font picker for headline and sub headline and also between two image i don't want any divider. , add two button should be in same row in both mobile and desktop. also should have the option for rearrange the main image and secondary imag. the buttons should have all the customization from color to font to radius 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-section-{{ ai_gen_id }} {
    width: 100%;
    position: relative;
    display: flex;
    flex-direction: column;
  }

  .ai-hero-section-{{ ai_gen_id }}--reverse {
    flex-direction: column-reverse;
  }

  .ai-hero-main-image-{{ ai_gen_id }} {
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .ai-hero-main-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
  }

  .ai-hero-main-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    position: relative;
  }

  .ai-hero-main-image-wrapper-{{ ai_gen_id }}--natural {
    aspect-ratio: auto;
  }

  .ai-hero-main-image-wrapper-{{ ai_gen_id }}--square {
    aspect-ratio: 1 / 1;
  }

  .ai-hero-main-image-wrapper-{{ ai_gen_id }}--portrait {
    aspect-ratio: 2 / 3;
  }

  .ai-hero-main-image-wrapper-{{ ai_gen_id }}--landscape {
    aspect-ratio: 4 / 3;
  }

  .ai-hero-main-image-wrapper-{{ ai_gen_id }}--widescreen {
    aspect-ratio: 16 / 9;
  }

  .ai-hero-main-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    min-height: 400px;
  }

  .ai-hero-main-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 600px;
    max-height: 600px;
  }

  .ai-hero-desktop-image-{{ ai_gen_id }} {
    display: none;
  }

  .ai-hero-mobile-image-{{ ai_gen_id }} {
    display: block;
  }

  @media screen and (min-width: 750px) {
    .ai-hero-desktop-image-{{ ai_gen_id }} {
      display: block;
    }

    .ai-hero-mobile-image-{{ ai_gen_id }} {
      display: none;
    }
  }

  .ai-hero-secondary-section-{{ ai_gen_id }} {
    width: 100%;
    position: relative;
  }

  .ai-hero-secondary-image-{{ ai_gen_id }} {
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .ai-hero-secondary-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
  }

  .ai-hero-secondary-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    position: relative;
  }

  .ai-hero-secondary-image-wrapper-{{ ai_gen_id }}--natural {
    aspect-ratio: auto;
  }

  .ai-hero-secondary-image-wrapper-{{ ai_gen_id }}--square {
    aspect-ratio: 1 / 1;
  }

  .ai-hero-secondary-image-wrapper-{{ ai_gen_id }}--portrait {
    aspect-ratio: 2 / 3;
  }

  .ai-hero-secondary-image-wrapper-{{ ai_gen_id }}--landscape {
    aspect-ratio: 4 / 3;
  }

  .ai-hero-secondary-image-wrapper-{{ ai_gen_id }}--widescreen {
    aspect-ratio: 16 / 9;
  }

  .ai-hero-secondary-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    min-height: 300px;
  }

  .ai-hero-secondary-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-content-wrapper-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: {{ block.settings.text_alignment }};
    width: 90%;
    max-width: 800px;
    z-index: 2;
  }

  .ai-hero-headline-{{ ai_gen_id }} {
    color: {{ block.settings.headline_color }};
    font-size: {{ block.settings.headline_size_mobile }}px;
    font-family: {{ block.settings.headline_font.family }}, {{ block.settings.headline_font.fallback_families }};
    font-weight: {{ block.settings.headline_font.weight }};
    font-style: {{ block.settings.headline_font.style }};
    margin: 0 0 {{ block.settings.text_spacing }}px;
    line-height: 1.2;
  }

  .ai-hero-subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size_mobile }}px;
    font-family: {{ block.settings.subheading_font.family }}, {{ block.settings.subheading_font.fallback_families }};
    font-weight: {{ block.settings.subheading_font.weight }};
    font-style: {{ block.settings.subheading_font.style }};
    margin: 0 0 {{ block.settings.button_spacing }}px;
    line-height: 1.4;
  }

  .ai-hero-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.button_gap }}px;
    justify-content: {{ block.settings.text_alignment }};
    flex-wrap: nowrap;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    cursor: pointer;
    border: none;
    transition: all 0.3s ease;
    white-space: nowrap;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
  }

  .ai-hero-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_primary_bg }};
    color: {{ block.settings.button_primary_text_color }};
    border-radius: {{ block.settings.button_primary_radius }}px;
    font-size: {{ block.settings.button_primary_font_size }}px;
    font-family: {{ block.settings.button_primary_font.family }}, {{ block.settings.button_primary_font.fallback_families }};
    font-weight: {{ block.settings.button_primary_font.weight }};
    font-style: {{ block.settings.button_primary_font.style }};
  }

  .ai-hero-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_primary_bg_hover }};
    color: {{ block.settings.button_primary_text_hover }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_secondary_bg }};
    color: {{ block.settings.button_secondary_text_color }};
    border-radius: {{ block.settings.button_secondary_radius }}px;
    font-size: {{ block.settings.button_secondary_font_size }}px;
    font-family: {{ block.settings.button_secondary_font.family }}, {{ block.settings.button_secondary_font.fallback_families }};
    font-weight: {{ block.settings.button_secondary_font.weight }};
    font-style: {{ block.settings.button_secondary_font.style }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_secondary_bg_hover }};
    color: {{ block.settings.button_secondary_text_hover }};
  }

  @media screen and (min-width: 750px) {
    .ai-hero-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size_desktop }}px;
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size_desktop }}px;
    }
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }
{% endstyle %}

<div class="ai-hero-section-{{ ai_gen_id }} {% if block.settings.layout_order == 'secondary_first' %}ai-hero-section-{{ ai_gen_id }}--reverse{% endif %}" {{ block.shopify_attributes }}>
  <div class="ai-hero-main-image-{{ ai_gen_id }}">
    {% if block.settings.desktop_image %}
      <div class="ai-hero-desktop-image-{{ ai_gen_id }}">
        <div class="ai-hero-main-image-wrapper-{{ ai_gen_id }} ai-hero-main-image-wrapper-{{ ai_gen_id }}--{{ block.settings.main_image_size }}">
          <img
            src="{{ block.settings.desktop_image | image_url: width: 2000 }}"
            alt="{{ block.settings.desktop_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.desktop_image.width }}"
            height="{{ block.settings.desktop_image.height }}"
          >
        </div>
      </div>
    {% else %}
      <div class="ai-hero-desktop-image-{{ ai_gen_id }}">
        <div class="ai-hero-main-image-wrapper-{{ ai_gen_id }} ai-hero-main-image-wrapper-{{ ai_gen_id }}--{{ block.settings.main_image_size }}">
          <div class="ai-hero-main-image-placeholder-{{ ai_gen_id }}">
            {{ 'hero-apparel-1' | placeholder_svg_tag }}
            <div class="ai-hero-empty-state-{{ ai_gen_id }}">
              Add a desktop image
            </div>
          </div>
        </div>
      </div>
    {% endif %}

    {% if block.settings.mobile_image %}
      <div class="ai-hero-mobile-image-{{ ai_gen_id }}">
        <div class="ai-hero-main-image-wrapper-{{ ai_gen_id }} ai-hero-main-image-wrapper-{{ ai_gen_id }}--{{ block.settings.main_image_size }}">
          <img
            src="{{ block.settings.mobile_image | image_url: width: 1000 }}"
            alt="{{ block.settings.mobile_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.mobile_image.width }}"
            height="{{ block.settings.mobile_image.height }}"
          >
        </div>
      </div>
    {% else %}
      <div class="ai-hero-mobile-image-{{ ai_gen_id }}">
        <div class="ai-hero-main-image-wrapper-{{ ai_gen_id }} ai-hero-main-image-wrapper-{{ ai_gen_id }}--{{ block.settings.main_image_size }}">
          <div class="ai-hero-main-image-placeholder-{{ ai_gen_id }}">
            {{ 'hero-apparel-1' | placeholder_svg_tag }}
            <div class="ai-hero-empty-state-{{ ai_gen_id }}">
              Add a mobile image
            </div>
          </div>
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-hero-secondary-section-{{ ai_gen_id }}">
    <div class="ai-hero-secondary-image-{{ ai_gen_id }}">
      <div class="ai-hero-secondary-image-wrapper-{{ ai_gen_id }} ai-hero-secondary-image-wrapper-{{ ai_gen_id }}--{{ block.settings.secondary_image_size }}">
        {% if block.settings.secondary_image %}
          <img
            src="{{ block.settings.secondary_image | image_url: width: 2000 }}"
            alt="{{ block.settings.secondary_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.secondary_image.width }}"
            height="{{ block.settings.secondary_image.height }}"
          >
        {% else %}
          <div class="ai-hero-secondary-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-hero-empty-state-{{ ai_gen_id }}">
              Add a secondary image
            </div>
          </div>
        {% endif %}

        {% if block.settings.headline != blank or block.settings.subheading != blank or block.settings.button_primary_label != blank or block.settings.button_secondary_label != blank %}
          <div class="ai-hero-content-wrapper-{{ ai_gen_id }}">
            {% if block.settings.headline != blank %}
              <h2 class="ai-hero-headline-{{ ai_gen_id }}">{{ block.settings.headline }}</h2>
            {% endif %}

            {% if block.settings.subheading != blank %}
              <div class="ai-hero-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
            {% endif %}

            {% if block.settings.button_primary_label != blank or block.settings.button_secondary_label != blank %}
              <div class="ai-hero-buttons-{{ ai_gen_id }}">
                {% if block.settings.button_primary_label != blank %}
                  <a
                    href="{{ block.settings.button_primary_link }}"
                    class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-primary-{{ ai_gen_id }}"
                  >
                    {{ block.settings.button_primary_label }}
                  </a>
                {% endif %}

                {% if block.settings.button_secondary_label != blank %}
                  <a
                    href="{{ block.settings.button_secondary_link }}"
                    class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-secondary-{{ ai_gen_id }}"
                  >
                    {{ block.settings.button_secondary_label }}
                  </a>
                {% endif %}
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

