<div class="ai-hero-section-{{ ai_gen_id }} {% if block.settings.layout_order == 'secondary_first' %}ai-hero-section-{{ ai_gen_id }}--reverse{% endif %}" {{ block.shopify_attributes }}>
  <div class="ai-hero-main-image-{{ ai_gen_id }}">
    {% if block.settings.desktop_image %}
      <div class="ai-hero-desktop-image-{{ ai_gen_id }}">
        <div class="ai-hero-main-image-wrapper-{{ ai_gen_id }} ai-hero-main-image-wrapper-{{ ai_gen_id }}--{{ block.settings.main_image_size }}">
          <img
            src="{{ block.settings.desktop_image | image_url: width: 2000 }}"
            alt="{{ block.settings.desktop_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.desktop_image.width }}"
            height="{{ block.settings.desktop_image.height }}"
          >
        </div>
      </div>
    {% else %}
      <div class="ai-hero-desktop-image-{{ ai_gen_id }}">
        <div class="ai-hero-main-image-wrapper-{{ ai_gen_id }} ai-hero-main-image-wrapper-{{ ai_gen_id }}--{{ block.settings.main_image_size }}">
          <div class="ai-hero-main-image-placeholder-{{ ai_gen_id }}">
            {{ 'hero-apparel-1' | placeholder_svg_tag }}
            <div class="ai-hero-empty-state-{{ ai_gen_id }}">
              Add a desktop image
            </div>
          </div>
        </div>
      </div>
    {% endif %}

    {% if block.settings.mobile_image %}
      <div class="ai-hero-mobile-image-{{ ai_gen_id }}">
        <div class="ai-hero-main-image-wrapper-{{ ai_gen_id }} ai-hero-main-image-wrapper-{{ ai_gen_id }}--{{ block.settings.main_image_size }}">
          <img
            src="{{ block.settings.mobile_image | image_url: width: 1000 }}"
            alt="{{ block.settings.mobile_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.mobile_image.width }}"
            height="{{ block.settings.mobile_image.height }}"
          >
        </div>
      </div>
    {% else %}
      <div class="ai-hero-mobile-image-{{ ai_gen_id }}">
        <div class="ai-hero-main-image-wrapper-{{ ai_gen_id }} ai-hero-main-image-wrapper-{{ ai_gen_id }}--{{ block.settings.main_image_size }}">
          <div class="ai-hero-main-image-placeholder-{{ ai_gen_id }}">
            {{ 'hero-apparel-1' | placeholder_svg_tag }}
            <div class="ai-hero-empty-state-{{ ai_gen_id }}">
              Add a mobile image
            </div>
          </div>
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-hero-secondary-section-{{ ai_gen_id }}">
    <div class="ai-hero-secondary-image-{{ ai_gen_id }}">
      <div class="ai-hero-secondary-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.headline != blank or block.settings.subheading != blank or block.settings.button_primary_label != blank or block.settings.button_secondary_label != blank %}
          <div class="ai-hero-content-wrapper-{{ ai_gen_id }}">
            {% if block.settings.headline != blank %}
              <h2 class="ai-hero-headline-{{ ai_gen_id }}" id="headline-{{ ai_gen_id }}">{{ block.settings.headline }}</h2>
            {% endif %}

            {% if block.settings.subheading != blank %}
              <div class="ai-hero-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
            {% endif %}

            {% if block.settings.button_primary_label != blank or block.settings.button_secondary_label != blank %}
              <div class="ai-hero-buttons-{{ ai_gen_id }}">
                {% if block.settings.button_primary_label != blank %}
                  <a
                    href="{{ block.settings.button_primary_link }}"
                    class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-primary-{{ ai_gen_id }}"
                  >
                    {{ block.settings.button_primary_label }}
                  </a>
                {% endif %}

                {% if block.settings.button_secondary_label != blank %}
                  <a
                    href="{{ block.settings.button_secondary_link }}"
                    class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-secondary-{{ ai_gen_id }}"
                  >
                    {{ block.settings.button_secondary_label }}
                  </a>
                {% endif %}
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<script>
(function() {
  const headline = document.getElementById('headline-{{ ai_gen_id }}');
  if (!headline) return;

  const text = headline.textContent.trim();
  const words = text.split(' ');
  
  if (words.length < 2) return;

  const lastTwoWords = words.slice(-2).join(' ');
  const remainingText = words.slice(0, -2).join(' ');

  const createFuzzyCanvas = async (text, container) => {
    await document.fonts.ready;

    const canvas = document.createElement('canvas');
    const ctx = canvas.getContext('2d');
    if (!ctx) return null;

    const computedStyle = window.getComputedStyle(headline);
    const fontSize = computedStyle.fontSize;
    const fontWeight = {{ block.settings.headline_font.weight }};
    const fontFamily = computedStyle.fontFamily;
    const color = '{{ block.settings.headline_color }}';

    const offscreen = document.createElement('canvas');
    const offCtx = offscreen.getContext('2d');
    if (!offCtx) return null;

    offCtx.font = `${fontWeight} ${fontSize} ${fontFamily}`;
    offCtx.textBaseline = 'alphabetic';
    const metrics = offCtx.measureText(text);

    const actualLeft = metrics.actualBoundingBoxLeft || 0;
    const actualRight = metrics.actualBoundingBoxRight || metrics.width;
    const actualAscent = metrics.actualBoundingBoxAscent || parseFloat(fontSize);
    const actualDescent = metrics.actualBoundingBoxDescent || parseFloat(fontSize) * 0.2;

    const textBoundingWidth = Math.ceil(actualLeft + actualRight);
    const tightHeight = Math.ceil(actualAscent + actualDescent);

    const extraWidthBuffer = 10;
    const offscreenWidth = textBoundingWidth + extraWidthBuffer;

    offscreen.width = offscreenWidth;
    offscreen.height = tightHeight;

    const xOffset = extraWidthBuffer / 2;
    offCtx.font = `${fontWeight} ${fontSize} ${fontFamily}`;
    offCtx.textBaseline = 'alphabetic';
    offCtx.fillStyle = color;
    offCtx.fillText(text, xOffset - actualLeft, actualAscent);

    const horizontalMargin = 50;
    const verticalMargin = 0;
    canvas.width = offscreenWidth + horizontalMargin * 2;
    canvas.height = tightHeight + verticalMargin * 2;
    ctx.translate(horizontalMargin, verticalMargin);

    const interactiveLeft = horizontalMargin + xOffset;
    const interactiveTop = verticalMargin;
    const interactiveRight = interactiveLeft + textBoundingWidth;
    const interactiveBottom = interactiveTop + tightHeight;

    let isHovering = false;
    const fuzzRange = {{ block.settings.fuzzy_range }};
    const baseIntensity = {{ block.settings.fuzzy_base_intensity }} / 100;
    const hoverIntensity = {{ block.settings.fuzzy_hover_intensity }} / 100;

    const run = () => {
      ctx.clearRect(-fuzzRange, -fuzzRange, offscreenWidth + 2 * fuzzRange, tightHeight + 2 * fuzzRange);
      const intensity = isHovering ? hoverIntensity : baseIntensity;
      for (let j = 0; j < tightHeight; j++) {
        const dx = Math.floor(intensity * (Math.random() - 0.5) * fuzzRange);
        ctx.drawImage(offscreen, 0, j, offscreenWidth, 1, dx, j, offscreenWidth, 1);
      }
      requestAnimationFrame(run);
    };

    run();

    const isInsideTextArea = (x, y) => {
      return x >= interactiveLeft && x <= interactiveRight && y >= interactiveTop && y <= interactiveBottom;
    };

    const handleMouseMove = (e) => {
      const rect = canvas.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      isHovering = isInsideTextArea(x, y);
    };

    const handleMouseLeave = () => {
      isHovering = false;
    };

    const handleTouchMove = (e) => {
      e.preventDefault();
      const rect = canvas.getBoundingClientRect();
      const touch = e.touches[0];
      const x = touch.clientX - rect.left;
      const y = touch.clientY - rect.top;
      isHovering = isInsideTextArea(x, y);
    };

    const handleTouchEnd = () => {
      isHovering = false;
    };

    canvas.addEventListener('mousemove', handleMouseMove);
    canvas.addEventListener('mouseleave', handleMouseLeave);
    canvas.addEventListener('touchmove', handleTouchMove, { passive: false });
    canvas.addEventListener('touchend', handleTouchEnd);

    return canvas;
  };

  const init = async () => {
    const wrapper = document.createElement('span');
    wrapper.className = 'fuzzy-text-wrapper';
    
    headline.innerHTML = remainingText + ' ';
    headline.appendChild(wrapper);

    const canvas = await createFuzzyCanvas(lastTwoWords, wrapper);
    if (canvas) {
      wrapper.appendChild(canvas);
    }
  };

  init();
})();
</script>

