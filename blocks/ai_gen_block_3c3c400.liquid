{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-instagram-grid-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px {{ block.settings.section_padding_horizontal }}px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-instagram-grid__container-{{ ai_gen_id }} {
    max-width: 100%;
    margin: 0 auto;
    padding: 0 20px;
  }

  @media screen and (min-width: 750px) {
    .ai-instagram-grid-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    }

    .ai-instagram-grid__container-{{ ai_gen_id }} {
      padding: 0 60px;
    }
  }

  .ai-instagram-grid__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
    position: relative;
  }

  .ai-instagram-grid__header-content-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 20px;
  }

  .ai-instagram-grid__header-left-{{ ai_gen_id }} {
    flex: 1;
  }

  .ai-instagram-grid__badge-{{ ai_gen_id }} {
    position: relative;
    width: {{ block.settings.badge_width }}px;
    height: {{ block.settings.badge_height }}px;
    flex-shrink: 0;
    border: {{ block.settings.badge_border_width }}px solid {{ block.settings.badge_border_color }};
    background: {{ block.settings.badge_background }};
    box-shadow: {{ block.settings.badge_shadow_x }}px {{ block.settings.badge_shadow_y }}px 0px {{ block.settings.badge_shadow_color }};
    transition: all 0.2s ease;
    overflow: hidden;
  }

  .ai-instagram-grid__badge-{{ ai_gen_id }}:hover {
    transform: translate({{ block.settings.badge_shadow_x | times: -0.5 }}px, {{ block.settings.badge_shadow_y | times: -0.5 }}px);
    box-shadow: {{ block.settings.badge_shadow_x | times: 1.5 }}px {{ block.settings.badge_shadow_y | times: 1.5 }}px 0px {{ block.settings.badge_shadow_color }};
  }

  .ai-instagram-grid__badge-{{ ai_gen_id }}:active {
    transform: translate({{ block.settings.badge_shadow_x }}px, {{ block.settings.badge_shadow_y }}px);
    box-shadow: 0px 0px 0px {{ block.settings.badge_shadow_color }};
  }

  .ai-instagram-grid__badge-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-instagram-grid__badge-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: {{ block.settings.badge_placeholder_bg }};
    color: {{ block.settings.badge_placeholder_color }};
    font-size: 40px;
    font-weight: bold;
  }

  .ai-instagram-grid__title-{{ ai_gen_id }} {
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
    font-weight: {{ block.settings.title_font.weight }};
    font-style: {{ block.settings.title_font.style }};
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
    text-transform: {{ block.settings.title_transform }};
    letter-spacing: {{ block.settings.title_letter_spacing }}px;
  }

  .ai-instagram-grid__subtitle-wrapper-{{ ai_gen_id }} {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
  }

  .ultra-button-{{ ai_gen_id }} {
    position: relative;
    appearance: none;
    border: none;
    background: none;
    padding: 40px 20px;
    cursor: pointer;
    outline: none;
    display: flex;
    justify-content: center;
    align-items: center;
    -webkit-tap-highlight-color: transparent;
  }

  .quadrant-{{ ai_gen_id }} {
    position: absolute;
    width: 50%;
    height: 50%;
    z-index: 50;
  }

  .q-tl-{{ ai_gen_id }} {
    top: 0;
    left: 0;
  }

  .q-tr-{{ ai_gen_id }} {
    top: 0;
    right: 0;
  }

  .q-bl-{{ ai_gen_id }} {
    bottom: 0;
    left: 0;
  }

  .q-br-{{ ai_gen_id }} {
    bottom: 0;
    right: 0;
  }

  .ultra-body-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px 16px 10px 24px;
    border-radius: 0px;
    background: #ffffff;
    border: {{ block.settings.subtitle_border_width }}px solid {{ block.settings.subtitle_border_color }};
    box-shadow: {{ block.settings.subtitle_shadow_x }}px {{ block.settings.subtitle_shadow_y }}px {{ block.settings.subtitle_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.subtitle_shadow_opacity | divided_by: 100.0 }});
    transition: transform 0.3s cubic-bezier(0.2, 0.8, 0.2, 1), box-shadow 0.3s ease, border-color 0.3s ease;
    z-index: 10;
  }

  .ultra-button-{{ ai_gen_id }}:has(.q-tl-{{ ai_gen_id }}:hover) .ultra-body-{{ ai_gen_id }} {
    transform: translate(-6px, -6px);
  }

  .ultra-button-{{ ai_gen_id }}:has(.q-tr-{{ ai_gen_id }}:hover) .ultra-body-{{ ai_gen_id }} {
    transform: translate(6px, -6px);
  }

  .ultra-button-{{ ai_gen_id }}:has(.q-bl-{{ ai_gen_id }}:hover) .ultra-body-{{ ai_gen_id }} {
    transform: translate(-6px, 6px);
  }

  .ultra-button-{{ ai_gen_id }}:has(.q-br-{{ ai_gen_id }}:hover) .ultra-body-{{ ai_gen_id }} {
    transform: translate(6px, 6px);
  }

  .ultra-button-{{ ai_gen_id }}:hover .ultra-body-{{ ai_gen_id }} {
    border-color: {{ block.settings.subtitle_border_color_hover }};
  }

  .label-text-{{ ai_gen_id }} {
    display: flex;
    overflow: hidden;
    height: 32px;
    align-items: center;
    font-family: {{ block.settings.subtitle_font.family }}, {{ block.settings.subtitle_font.fallback_families }};
    font-size: {{ block.settings.subtitle_size }}px;
    font-weight: {{ block.settings.subtitle_font.weight }};
    color: {{ block.settings.subtitle_color }};
  }

  .ultra-button-{{ ai_gen_id }}:has(.q-tl-{{ ai_gen_id }}:hover) .label-text-{{ ai_gen_id }} {
    transform: translate(-2px, -2px);
  }

  .ultra-button-{{ ai_gen_id }}:has(.q-tr-{{ ai_gen_id }}:hover) .label-text-{{ ai_gen_id }} {
    transform: translate(2px, -2px);
  }

  .ultra-button-{{ ai_gen_id }}:has(.q-bl-{{ ai_gen_id }}:hover) .label-text-{{ ai_gen_id }} {
    transform: translate(-2px, 2px);
  }

  .ultra-button-{{ ai_gen_id }}:has(.q-br-{{ ai_gen_id }}:hover) .label-text-{{ ai_gen_id }} {
    transform: translate(2px, 2px);
  }

  .l-{{ ai_gen_id }} {
    display: inline-block;
    transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1), color 0.3s;
    transform-origin: center center;
  }

  .ultra-button-{{ ai_gen_id }}:hover .l-{{ ai_gen_id }} {
    transform: rotateX(360deg);
    color: #353535;
    transition-delay: calc(var(--i) * 0.03s);
  }

  .chip-container-{{ ai_gen_id }} {
    margin-left: 20px;
    position: relative;
  }

  .border-chip-{{ ai_gen_id }} {
    width: 52px;
    height: 50px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 16px;
    overflow: hidden;
    transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    isolation: isolate;
  }

  .border-chip-{{ ai_gen_id }}::before {
    content: "";
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: conic-gradient(
      from 0deg,
      #ff000090,
      #ff8a0090,
      #ffff0090,
      #00ff0090,
      #0099ff90,
      #0000ff90,
      #8b00ff90,
      #ff000090
    );
    animation: spinBorder-{{ ai_gen_id }} 4s linear infinite;
    z-index: 1;
  }

  .inner-chip-{{ ai_gen_id }} {
    position: absolute;
    inset: 3px;
    background: conic-gradient(
      from 0deg,
      #ff5d5d,
      #ffb663,
      #ffff67,
      #66ff66,
      #64c1ff,
      #6767ff,
      #b964ff,
      #ff6666
    );
    border-radius: 14px;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .nav-icon-{{ ai_gen_id }} {
    width: 28px;
    height: 28px;
    stroke: #ffffff;
    z-index: 3;
    transform: translateX(-4px);
    animation: arrowMove-{{ ai_gen_id }} 2s ease-in-out infinite;
    transition: stroke 0.3s;
  }

  .ultra-button-{{ ai_gen_id }}:hover .border-chip-{{ ai_gen_id }} {
    transform: scale(1.1);
  }

  .ultra-button-{{ ai_gen_id }}:hover .border-chip-{{ ai_gen_id }}::before {
    background: conic-gradient(
      from 0deg,
      #ff0000,
      #ff8a00,
      #ffff00,
      #00ff00,
      #0099ff,
      #0000ff,
      #8b00ff,
      #ff0000
    );
    animation: spinBorder-{{ ai_gen_id }} 1.5s linear infinite;
  }

  .ultra-button-{{ ai_gen_id }}:hover .inner-chip-{{ ai_gen_id }} {
    background: conic-gradient(
      from 0deg,
      #ff4646,
      #ffaa49,
      #ffff44,
      #54ff54,
      #54bbff,
      #4d4dff,
      #af4eff,
      #ff4848
    );
  }

  .ultra-button-{{ ai_gen_id }}:hover .nav-icon-{{ ai_gen_id }} {
    animation: none;
    transform: translateX(1px);
  }

  .aura-glow-{{ ai_gen_id }} {
    position: absolute;
    right: -25px;
    top: 50%;
    width: 110px;
    height: 110px;
    border-radius: 50%;
    background: conic-gradient(
      from 0deg,
      #ff0000,
      #ff8a00,
      #ffff00,
      #00ff00,
      #0099ff,
      #0000ff,
      #8b00ff,
      #ff0000
    );
    filter: blur(30px);
    opacity: 0.6;
    transform: translateY(-50%) translateZ(-10px);
    z-index: -1;
    transition: all 0.5s cubic-bezier(0.2, 0.8, 0.2, 1);
    animation: glowActive-{{ ai_gen_id }} 4s linear infinite;
  }

  .ultra-button-{{ ai_gen_id }}:hover .aura-glow-{{ ai_gen_id }} {
    opacity: 0.8;
    width: 130px;
    height: 130px;
    right: -35px;
    filter: blur(35px);
  }

  .ultra-button-{{ ai_gen_id }}:active .ultra-body-{{ ai_gen_id }} {
    transform: scale(0.96) !important;
  }

  @keyframes spinBorder-{{ ai_gen_id }} {
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes arrowMove-{{ ai_gen_id }} {
    0% {
      transform: translateX(-4px);
    }
    50% {
      transform: translateX(5px);
    }
    100% {
      transform: translateX(-4px);
    }
  }

  @keyframes glowActive-{{ ai_gen_id }} {
    0% {
      transform: translateY(-50%) rotate(0deg);
    }
    100% {
      transform: translateY(-50%) rotate(360deg);
    }
  }

  .ai-instagram-grid__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.grid_spacing }}px;
    padding: 0;
  }

  .ai-instagram-grid__item-{{ ai_gen_id }} {
    position: relative;
    aspect-ratio: 4 / 5;
    overflow: hidden;
    border-radius: {{ block.settings.item_border_radius }}px;
    background-color: {{ block.settings.item_background }};
  }

  .ai-instagram-grid__media-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-instagram-grid__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.placeholder_background }};
  }

  .ai-instagram-grid__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-instagram-grid__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-instagram-grid__item-{{ ai_gen_id }}:hover .ai-instagram-grid__overlay-{{ ai_gen_id }} {
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .ai-instagram-grid__overlay-icon-{{ ai_gen_id }} {
    width: {{ block.settings.overlay_icon_size }}px;
    height: {{ block.settings.overlay_icon_size }}px;
    color: {{ block.settings.overlay_icon_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-instagram-grid-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top_mobile }}px {{ block.settings.section_padding_horizontal_mobile }}px {{ block.settings.section_padding_bottom_mobile }}px;
    }

    .ultra-button-{{ ai_gen_id }} {
      padding: 40px 20px;
    }

    .ultra-body-{{ ai_gen_id }} {
      padding: 8px 12px 8px 20px;
    }

    .label-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size_mobile }}px;
      height: 28px;
    }

    .chip-container-{{ ai_gen_id }} {
      margin-left: 12px;
    }

    .border-chip-{{ ai_gen_id }} {
      width: 44px;
      height: 42px;
    }

    .ai-instagram-grid__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap_mobile }}px;
      padding: 0;
    }

    .ai-instagram-grid__container-{{ ai_gen_id }} {
      padding: 0 4px;
    }

    .ai-instagram-grid__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-instagram-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-instagram-grid__container-{{ ai_gen_id }}">
    {% if block.settings.show_header %}
      <div class="ai-instagram-grid__header-{{ ai_gen_id }}">
        <div class="ai-instagram-grid__header-content-{{ ai_gen_id }}">
          <div class="ai-instagram-grid__header-left-{{ ai_gen_id }}">
            {% if block.settings.title != blank %}
              <h2 class="ai-instagram-grid__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
            {% endif %}
            {% if block.settings.subtitle != blank %}
              <div class="ai-instagram-grid__subtitle-wrapper-{{ ai_gen_id }}">
                <button class="ultra-button-{{ ai_gen_id }}" aria-label="{{ block.settings.subtitle }}">
                  <div class="quadrant-{{ ai_gen_id }} q-tl-{{ ai_gen_id }}"></div>
                  <div class="quadrant-{{ ai_gen_id }} q-tr-{{ ai_gen_id }}"></div>
                  <div class="quadrant-{{ ai_gen_id }} q-bl-{{ ai_gen_id }}"></div>
                  <div class="quadrant-{{ ai_gen_id }} q-br-{{ ai_gen_id }}"></div>
                  <div class="ultra-body-{{ ai_gen_id }}">
                    <div class="label-text-{{ ai_gen_id }}">
                      {% assign subtitle_chars = block.settings.subtitle | split: '' %}
                      {% for char in subtitle_chars %}
                        <span class="l-{{ ai_gen_id }}" style="--i:{{ forloop.index0 }}">{{ char }}</span>
                      {% endfor %}
                    </div>
                    <div class="chip-container-{{ ai_gen_id }}">
                      <div class="border-chip-{{ ai_gen_id }}">
                        <div class="inner-chip-{{ ai_gen_id }}">
                          <svg
                            class="nav-icon-{{ ai_gen_id }}"
                            viewBox="0 0 24 24"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                          >
                            <rect x="2" y="2" width="20" height="20" rx="5" ry="5" stroke="currentColor" stroke-width="2"></rect>
                            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" stroke="currentColor" stroke-width="2"></path>
                            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5" stroke="currentColor" stroke-width="2"></line>
                          </svg>
                        </div>
                      </div>
                    </div>
                    <div class="aura-glow-{{ ai_gen_id }}"></div>
                  </div>
                </button>
              </div>
            {% endif %}
          </div>

          {% if block.settings.show_badge %}
            <div class="ai-instagram-grid__badge-{{ ai_gen_id }}">
              {% if block.settings.badge_image != blank %}
                <img
                  src="{{ block.settings.badge_image | image_url: width: 400 }}"
                  alt="{{ block.settings.badge_image.alt | escape }}"
                  class="ai-instagram-grid__badge-image-{{ ai_gen_id }}"
                  loading="lazy"
                >
              {% else %}
                <div class="ai-instagram-grid__badge-placeholder-{{ ai_gen_id }}">
                  ?
                </div>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    {% endif %}

    <div class="ai-instagram-grid__grid-{{ ai_gen_id }}">
      {% for i in (1..12) %}
        {% liquid
          assign item_enabled_key = 'item_' | append: i | append: '_enabled'
          assign item_type_key = 'item_' | append: i | append: '_type'
          assign item_image_key = 'item_' | append: i | append: '_image'
          assign item_video_key = 'item_' | append: i | append: '_video'
          assign item_link_key = 'item_' | append: i | append: '_link'

          assign item_enabled = block.settings[item_enabled_key]
          assign item_type = block.settings[item_type_key]
          assign item_image = block.settings[item_image_key]
          assign item_video = block.settings[item_video_key]
          assign item_link = block.settings[item_link_key]
        %}

        {% if item_enabled %}
          <div class="ai-instagram-grid__item-{{ ai_gen_id }}">
            {% if item_link != blank %}
              <a href="{{ item_link }}" class="ai-instagram-grid__link-{{ ai_gen_id }}">
            {% endif %}

            {% if item_type == 'image' %}
              {% if item_image != blank %}
                <img
                  src="{{ item_image | image_url: width: 800 }}"
                  alt="{{ item_image.alt | escape }}"
                  class="ai-instagram-grid__media-{{ ai_gen_id }}"
                  loading="lazy"
                  width="800"
                  height="1000"
                >
              {% else %}
                <div class="ai-instagram-grid__placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            {% elsif item_type == 'video' %}
              {% if item_video != blank %}
                <video
                  class="ai-instagram-grid__media-{{ ai_gen_id }}"
                  playsinline
                  {% if block.settings.video_autoplay %}autoplay{% endif %}
                  {% if block.settings.video_loop %}loop{% endif %}
                  {% if block.settings.video_muted %}muted{% endif %}
                >
                  <source src="{{ item_video }}" type="video/mp4">
                </video>
              {% else %}
                <div class="ai-instagram-grid__placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            {% endif %}

            {% if block.settings.show_overlay %}
              <div class="ai-instagram-grid__overlay-{{ ai_gen_id }}">
                <svg class="ai-instagram-grid__overlay-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                </svg>
              </div>
            {% endif %}

            {% if item_link != blank %}
              </a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Instagram grid",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Section header"
    },
    {
      "type": "checkbox",
      "id": "show_header",
      "label": "Show header",
      "default": true
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Follow us on Instagram"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "@yourhandle"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Top right badge (Neubrutalism)"
    },
    {
      "type": "checkbox",
      "id": "show_badge",
      "label": "Show badge",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "badge_image",
      "label": "Badge image"
    },
    {
      "type": "range",
      "id": "badge_width",
      "min": 60,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Width (desktop)",
      "default": 120
    },
    {
      "type": "range",
      "id": "badge_height",
      "min": 60,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Height (desktop)",
      "default": 120
    },
    {
      "type": "range",
      "id": "badge_width_mobile",
      "min": 50,
      "max": 150,
      "step": 10,
      "unit": "px",
      "label": "Width (mobile)",
      "default": 80
    },
    {
      "type": "range",
      "id": "badge_height_mobile",
      "min": 50,
      "max": 150,
      "step": 10,
      "unit": "px",
      "label": "Height (mobile)",
      "default": 80
    },
    {
