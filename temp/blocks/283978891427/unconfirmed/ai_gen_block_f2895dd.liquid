{% doc %}
  @prompt
    create a scrolling logo section for me. all should be customizable section color to size to logo opacity, should option for on off of logos
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-logo-scroll-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 0;
    overflow: hidden;
  }

  .ai-logo-scroll-container-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.logo_spacing }}px;
  }

  .ai-logo-scroll-track-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.logo_spacing }}px;
    animation: ai-logo-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
  }

  .ai-logo-scroll-item-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.logo_width }}px;
    height: {{ block.settings.logo_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: {{ block.settings.logo_opacity }};
    transition: opacity 0.3s ease;
  }

  .ai-logo-scroll-item-{{ ai_gen_id }}:hover {
    opacity: 1;
  }

  .ai-logo-scroll-item-{{ ai_gen_id }} img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    filter: grayscale({{ block.settings.logo_grayscale }}%);
    transition: filter 0.3s ease;
  }

  .ai-logo-scroll-item-{{ ai_gen_id }}:hover img {
    filter: grayscale(0%);
  }

  .ai-logo-scroll-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-logo-scroll-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  @keyframes ai-logo-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-100% - {{ block.settings.logo_spacing }}px));
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .ai-logo-scroll-track-{{ ai_gen_id }} {
      animation: none;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-logo-scroll-item-{{ ai_gen_id }} {
      width: {{ block.settings.logo_width | times: 0.7 }}px;
      height: {{ block.settings.logo_height | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-logo-scroll-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-logo-scroll-container-{{ ai_gen_id }}">
    <div class="ai-logo-scroll-track-{{ ai_gen_id }}">
      {% for i in (1..8) %}
        {% liquid
          assign logo_key = 'logo_' | append: i
          assign logo_enabled_key = 'logo_' | append: i | append: '_enabled'
          assign logo = block.settings[logo_key]
          assign logo_enabled = block.settings[logo_enabled_key]
        %}
        
        {% if logo_enabled %}
          {% if logo != blank %}
            <div class="ai-logo-scroll-item-{{ ai_gen_id }}">
              <img
                src="{{ logo | image_url: width: 400 }}"
                alt="{{ logo.alt | escape }}"
                loading="lazy"
                width="{{ block.settings.logo_width }}"
                height="{{ block.settings.logo_height }}"
              >
            </div>
          {% else %}
            <div class="ai-logo-scroll-item-{{ ai_gen_id }}">
              <div class="ai-logo-scroll-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>

    <div class="ai-logo-scroll-track-{{ ai_gen_id }}" aria-hidden="true">
      {% for i in (1..8) %}
        {% liquid
          assign logo_key = 'logo_' | append: i
          assign logo_enabled_key = 'logo_' | append: i | append: '_enabled'
          assign logo = block.settings[logo_key]
          assign logo_enabled = block.settings[logo_enabled_key]
        %}
        
        {% if logo_enabled %}
          {% if logo != blank %}
            <div class="ai-logo-scroll-item-{{ ai_gen_id }}">
              <img
                src="{{ logo | image_url: width: 400 }}"
                alt="{{ logo.alt | escape }}"
                loading="lazy"
                width="{{ block.settings.logo_width }}"
                height="{{ block.settings.logo_height }}"
              >
            </div>
          {% else %}
            <div class="ai-logo-scroll-item-{{ ai_gen_id }}">
              <div class="ai-logo-scroll-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

