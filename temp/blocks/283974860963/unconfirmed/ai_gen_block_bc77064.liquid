{% doc %}
  @prompt
    build a modern footer for me where links willl be squared box and a big logo at the very bottom the bottom logo opacity should be customizable. also all background to font to color should be customizable  
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-modern-footer-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: 60px 20px 40px;
    color: {{ block.settings.text_color }};
  }

  .ai-modern-footer__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-modern-footer__links-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 30px;
    margin-bottom: 60px;
  }

  .ai-modern-footer__column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-modern-footer__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    margin: 0 0 8px 0;
    color: {{ block.settings.heading_color }};
  }

  .ai-modern-footer__link-box-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 20px;
    background-color: {{ block.settings.link_box_background }};
    color: {{ block.settings.link_box_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.link_box_border_radius }}px;
    transition: all 0.3s ease;
    text-align: center;
    border: {{ block.settings.link_box_border_width }}px solid {{ block.settings.link_box_border_color }};
  }

  .ai-modern-footer__link-box-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.link_box_hover_background }};
    color: {{ block.settings.link_box_hover_text_color }};
    transform: translateY(-2px);
  }

  .ai-modern-footer__bottom-logo-wrapper-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    padding-top: 40px;
    border-top: 1px solid {{ block.settings.divider_color }};
  }

  .ai-modern-footer__bottom-logo-{{ ai_gen_id }} {
    max-width: {{ block.settings.bottom_logo_width }}px;
    opacity: {{ block.settings.bottom_logo_opacity | divided_by: 100.0 }};
    transition: opacity 0.3s ease;
  }

  .ai-modern-footer__bottom-logo-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-modern-footer__bottom-logo-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.bottom_logo_width }}px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: {{ block.settings.bottom_logo_opacity | divided_by: 100.0 }};
  }

  .ai-modern-footer__bottom-logo-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    opacity: 0.3;
  }

  @media screen and (max-width: 749px) {
    .ai-modern-footer__links-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .ai-modern-footer__bottom-logo-{{ ai_gen_id }},
    .ai-modern-footer__bottom-logo-placeholder-{{ ai_gen_id }} {
      max-width: {{ block.settings.bottom_logo_width | times: 0.7 }}px;
    }
  }
{% endstyle %}

