    {
      "type": "range",
      "id": "section_spacing",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Space between sections",
      "default": 40
    },
    {
      "type": "range",
      "id": "text_spacing",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Space between headline and subheading",
      "default": 12
    }
  ],
  "presets": [
    {
      "name": "Hero section"
    }
  ]
}
{% endschema %}
