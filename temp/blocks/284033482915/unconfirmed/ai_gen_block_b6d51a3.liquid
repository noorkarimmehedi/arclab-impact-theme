    {
      "type": "range",
      "id": "headline_size_desktop",
      "min": 20,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Headline size (desktop)",
      "default": 48
    },
    {
      "type": "range",
      "id": "subheading_size_mobile",
      "min": 12,
      "max": 30,
      "step": 2,
      "unit": "px",
      "label": "Subheading size (mobile)",
      "default": 14
    },
    {
      "type": "range",
      "id": "subheading_size_desktop",
      "min": 14,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Subheading size (desktop)",
      "default": 18
    },
    {
      "type": "color",
      "id": "headline_color",
      "label": "Headline color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Spacing"
