  .ai-product-showcase__container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
  }

  .ai-product-showcase__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-product-showcase__title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
    text-transform: {{ block.settings.text_transform }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
    text-shadow: {{ block.settings.text_shadow_x }}px {{ block.settings.text_shadow_y }}px 0 {{ block.settings.text_shadow_color }};
  }

  .ai-product-showcase__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1.5fr 1fr;
    gap: {{ block.settings.product_gap }}px;
    align-items: center;
    margin-bottom: 30px;
  }

  .ai-product-showcase__card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    box-shadow: {{ block.settings.shadow_x }}px {{ block.settings.shadow_y }}px 0 {{ block.settings.shadow_color }};
    transition: transform 0.2s ease;
    position: relative;
  }

  .ai-product-showcase__card-{{ ai_gen_id }}:hover {
    transform: translate(-2px, -2px);
    box-shadow: calc({{ block.settings.shadow_x }}px + 2px) calc({{ block.settings.shadow_y }}px + 2px) 0 {{ block.settings.shadow_color }};
  }

  .ai-product-showcase__card--center-{{ ai_gen_id }} {
    transform: scale(1);
  }

  .ai-product-showcase__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    margin-bottom: 15px;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    border: {{ block.settings.image_border_width }}px solid {{ block.settings.image_border_color }};
  }

  .ai-product-showcase__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-showcase__badge-{{ ai_gen_id }} {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: 6px 12px;
    border: {{ block.settings.badge_border_width }}px solid {{ block.settings.badge_border_color }};
    border-radius: {{ block.settings.badge_border_radius }}px;
    font-weight: 700;
    font-size: 12px;
    text-transform: uppercase;
    box-shadow: {{ block.settings.badge_shadow_x }}px {{ block.settings.badge_shadow_y }}px 0 {{ block.settings.badge_shadow_color }};
  }

  .ai-product-showcase__info-{{ ai_gen_id }} {
