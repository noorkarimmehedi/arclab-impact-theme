{% doc %}
  @prompt
    build a instagram 4:5 grid where image or video can be uploaded. from font o color to radius to top and bottom padding can be customizable and also i want on off options for image or video 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-instagram-grid-{{ ai_gen_id }} {
    padding-top: {{ block.settings.padding_top }}px;
    padding-bottom: {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-instagram-grid__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-instagram-grid__heading-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
  }

  .ai-instagram-grid__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-instagram-grid__item-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 125%;
    overflow: hidden;
    border-radius: {{ block.settings.item_border_radius }}px;
    background-color: {{ block.settings.item_background }};
  }

  .ai-instagram-grid__media-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-instagram-grid__placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-instagram-grid__placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  @media screen and (max-width: 989px) {
    .ai-instagram-grid__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-instagram-grid__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }

    .ai-instagram-grid__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-instagram-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-instagram-grid__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-instagram-grid__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-instagram-grid__grid-{{ ai_gen_id }}">
      {% for i in (1..12) %}
        {% liquid
          assign enabled_key = 'item_' | append: i | append: '_enabled'
          assign type_key = 'item_' | append: i | append: '_type'
          assign image_key = 'item_' | append: i | append: '_image'
          assign video_key = 'item_' | append: i | append: '_video'

          assign item_enabled = block.settings[enabled_key]
          assign item_type = block.settings[type_key]
          assign item_image = block.settings[image_key]
          assign item_video = block.settings[video_key]
        %}

        {% if item_enabled %}
          <div class="ai-instagram-grid__item-{{ ai_gen_id }}">
            {% if item_type == 'image' %}
              {% if item_image %}
                <img
                  src="{{ item_image | image_url: width: 600 }}"
                  alt="{{ item_image.alt | escape }}"
                  class="ai-instagram-grid__media-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="750"
                >
              {% else %}
                <div class="ai-instagram-grid__placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            {% elsif item_type == 'video' %}
              {% if item_video %}
                <video
                  class="ai-instagram-grid__media-{{ ai_gen_id }}"
                  playsinline
                  autoplay
                  muted
                  loop
                >
                  <source src="{{ item_video }}" type="video/mp4">
                </video>
              {% else %}
                <div class="ai-instagram-grid__placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

