    padding: 40px 20px;
    background-color: {{ block.settings.section_background }};
  }

  .ai-neo-collection__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 30px;
  }

  .ai-neo-collection__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 10px;
    font-weight: 700;
  }

  .ai-neo-collection__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-neo-collection__carousel-{{ ai_gen_id }} {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-neo-collection__track-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    overflow: hidden;
    padding: 20px 0;
  }

  @media screen and (min-width: 750px) {
    .ai-neo-collection__track-{{ ai_gen_id }} {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 24px;
    }
  }

  .ai-neo-collection__product-{{ ai_gen_id }} {
    flex: 0 0 calc(33.333% - 11px);
    transition: transform 0.3s ease;
  }

  @media screen and (min-width: 750px) {
    .ai-neo-collection__product-{{ ai_gen_id }} {
      flex: none;
    }
  }

  .ai-neo-collection__product-{{ ai_gen_id }}.center {
    flex: 0 0 calc(40% - 11px);
    transform: scale(1.1);
  }

  @media screen and (min-width: 750px) {
    .ai-neo-collection__product-{{ ai_gen_id }}.center {
      transform: scale(1);
    }
  }

  .ai-neo-collection__card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    box-shadow: {{ block.settings.shadow_x }}px {{ block.settings.shadow_y }}px 0 {{ block.settings.shadow_color }};
    overflow: hidden;
    cursor: pointer;
    transition: all 0.2s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .ai-neo-collection__card-{{ ai_gen_id }}:hover {
    transform: translate(-2px, -2px);
    box-shadow: {{ block.settings.shadow_x | plus: 2 }}px {{ block.settings.shadow_y | plus: 2 }}px 0 {{ block.settings.shadow_color }};
  }

  .ai-neo-collection__card-{{ ai_gen_id }}:active {
    transform: translate({{ block.settings.shadow_x | divided_by: 2 }}px, {{ block.settings.shadow_y | divided_by: 2 }}px);
    box-shadow: {{ block.settings.shadow_x | divided_by: 2 }}px {{ block.settings.shadow_y | divided_by: 2 }}px 0 {{ block.settings.shadow_color }};
  }

  .ai-neo-collection__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: {{ block.settings.image_background }};
  }

  .ai-neo-collection__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-neo-collection__badge-{{ ai_gen_id }} {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: 4px 12px;
    border-radius: {{ block.settings.badge_radius }}px;
    font-size: 12px;
    font-weight: 700;
    border: {{ block.settings.badge_border_width }}px solid {{ block.settings.badge_border_color }};
    box-shadow: 2px 2px 0 {{ block.settings.badge_shadow_color }};
  }

  .ai-neo-collection__info-{{ ai_gen_id }} {
    padding: 16px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-neo-collection__vendor-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.vendor_color }};
    margin: 0 0 4px;
    text-transform: uppercase;
    font-weight: 600;
  }

  .ai-neo-collection__product-title-{{ ai_gen_id }} {
