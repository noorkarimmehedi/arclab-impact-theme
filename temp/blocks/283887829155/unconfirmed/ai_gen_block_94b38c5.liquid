    text-decoration: line-through;
    opacity: 0.6;
    margin-left: 8px;
    font-size: {{ block.settings.price_size | times: 0.85 }}px;
  }

  .ai-neo-collection__controls-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 16px;
    margin-top: 30px;
  }

  @media screen and (min-width: 750px) {
