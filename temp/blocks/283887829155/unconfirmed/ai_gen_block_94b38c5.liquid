    width: 100px;
    height: 100px;
    margin-bottom: 20px;
    opacity: 0.3;
  }
{% endstyle %}

<neo-collection-{{ ai_gen_id }} class="ai-neo-collection-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.title != blank or block.settings.subtitle != blank %}
    <div class="ai-neo-collection__header-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-neo-collection__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <p class="ai-neo-collection__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
      {% endif %}
    </div>
  {% endif %}

  {% if block.settings.collection != blank %}
    <div class="ai-neo-collection__carousel-{{ ai_gen_id }}">
      <div class="ai-neo-collection__track-{{ ai_gen_id }}" data-track>
        {% for product in block.settings.collection.products limit: block.settings.products_limit %}
          <div class="ai-neo-collection__product-{{ ai_gen_id }}" data-product-index="{{ forloop.index0 }}">
            <a href="{{ product.url }}" class="ai-neo-collection__card-{{ ai_gen_id }}">
              <div class="ai-neo-collection__image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-neo-collection__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  <div class="ai-neo-collection__image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}

                {% if product.compare_at_price > product.price %}
                  <div class="ai-neo-collection__badge-{{ ai_gen_id }}">
                    SALE
                  </div>
                {% elsif product.available == false %}
                  <div class="ai-neo-collection__badge-{{ ai_gen_id }}">
                    SOLD OUT
                  </div>
                {% endif %}
              </div>

              <div class="ai-neo-collection__info-{{ ai_gen_id }}">
                {% if block.settings.show_vendor and product.vendor != blank %}
                  <p class="ai-neo-collection__vendor-{{ ai_gen_id }}">{{ product.vendor }}</p>
                {% endif %}

                <h3 class="ai-neo-collection__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>

                <div class="ai-neo-collection__price-{{ ai_gen_id }}">
                  {{ product.price | money }}
                  {% if product.compare_at_price > product.price %}
                    <span class="ai-neo-collection__price-compare-{{ ai_gen_id }}">
                      {{ product.compare_at_price | money }}
                    </span>
                  {% endif %}
                </div>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>

      <div class="ai-neo-collection__controls-{{ ai_gen_id }}">
        <button class="ai-neo-collection__arrow-{{ ai_gen_id }}" data-prev aria-label="Previous products">
          ←
        </button>
        <button class="ai-neo-collection__arrow-{{ ai_gen_id }}" data-next aria-label="Next products">
          →
        </button>
      </div>
    </div>
  {% else %}
    <div class="ai-neo-collection__empty-{{ ai_gen_id }}">
      {{ 'collection-1' | placeholder_svg_tag }}
      <p>Select a collection to display products</p>
    </div>
  {% endif %}
</neo-collection-{{ ai_gen_id }}>

<script>
  (function() {
    class NeoCollection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.isMobile = window.innerWidth < 750;
      }

      connectedCallback() {
        this.track = this.querySelector('[data-track]');
        this.products = this.querySelectorAll('.ai-neo-collection__product-{{ ai_gen_id }}');
        this.prevBtn = this.querySelector('[data-prev]');
        this.nextBtn = this.querySelector('[data-next]');

        if (!this.track || this.products.length === 0) return;

        this.setupCarousel();
        this.attachEventListeners();
        this.handleResize();
      }

      setupCarousel() {
        if (!this.isMobile) return;

        this.updateCarousel();
      }

      updateCarousel() {
        if (!this.isMobile) return;

        this.products.forEach((product, index) => {
          product.classList.remove('center');
          product.style.display = 'none';
        });

        const prevIndex = this.currentIndex === 0 ? this.products.length - 1 : this.currentIndex - 1;
        const nextIndex = this.currentIndex === this.products.length - 1 ? 0 : this.currentIndex + 1;

        if (this.products[prevIndex]) {
          this.products[prevIndex].style.display = 'block';
        }

        if (this.products[this.currentIndex]) {
          this.products[this.currentIndex].style.display = 'block';
          this.products[this.currentIndex].classList.add('center');
        }

        if (this.products[nextIndex]) {
          this.products[nextIndex].style.display = 'block';
        }

        this.updateButtons();
      }

      updateButtons() {
        if (!this.prevBtn || !this.nextBtn) return;

        this.prevBtn.disabled = false;
        this.nextBtn.disabled = false;
      }

      goToPrev() {
        this.currentIndex = this.currentIndex === 0 ? this.products.length - 1 : this.currentIndex - 1;
        this.updateCarousel();
      }

      goToNext() {
        this.currentIndex = this.currentIndex === this.products.length - 1 ? 0 : this.currentIndex + 1;
        this.updateCarousel();
      }

      attachEventListeners() {
        if (this.prevBtn) {
          this.prevBtn.addEventListener('click', () => this.goToPrev());
        }

        if (this.nextBtn) {
          this.nextBtn.addEventListener('click', () => this.goToNext());
        }

        window.addEventListener('resize', () => this.handleResize());
      }

      handleResize() {
        const wasMobile = this.isMobile;
        this.isMobile = window.innerWidth < 750;

        if (wasMobile !== this.isMobile) {
          if (this.isMobile) {
            this.setupCarousel();
          } else {
            this.products.forEach(product => {
              product.style.display = 'block';
              product.classList.remove('center');
            });
          }
        }
      }
    }

    customElements.define('neo-collection-{{ ai_gen_id }}', NeoCollection{{ ai_gen_id }});
  })();
</script>

