    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-product-carousel__container-{{ ai_gen_id }} {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-product-carousel__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.spacing_between_elements }}px;
  }

  .ai-product-carousel__heading-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1;
    margin: 0 0 {{ block.settings.spacing_between_elements }}px;
    color: {{ block.settings.heading_color }};
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }

  .ai-product-carousel__subtitle-{{ ai_gen_id }} {
    font-family: {{ block.settings.subtitle_font.family }}, {{ block.settings.subtitle_font.fallback_families }};
    font-weight: {{ block.settings.subtitle_font.weight }};
    font-size: {{ block.settings.subtitle_size }}px;
    line-height: 1.3;
    margin: 0;
    color: {{ block.settings.subtitle_color }};
  }

  .ai-product-carousel__wrapper-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-product-carousel__scroll-container-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding-bottom: 20px;
  }

  .ai-product-carousel__scroll-container-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-product-carousel__card-{{ ai_gen_id }} {
    flex: 0 0 auto;
    width: 320px;
    background-color: {{ block.settings.card_background }};
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: 20px;
    box-shadow: {{ block.settings.card_shadow_horizontal }}px {{ block.settings.card_shadow_vertical }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
    position: relative;
  }

  .ai-product-carousel__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    margin-bottom: 20px;
  }

  .ai-product-carousel__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: block;
  }

  .ai-product-carousel__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    background-color: #e0e0e0;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-carousel__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-carousel__badge-{{ ai_gen_id }} {
    position: absolute;
    top: -10px;
    right: -10px;
    width: {{ block.settings.badge_size }}px;
    height: {{ block.settings.badge_size }}px;
    background-color: {{ block.settings.badge_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    clip-path: polygon(
      50% 0%,
      61% 35%,
      98% 35%,
      68% 57%,
      79% 91%,
      50% 70%,
      21% 91%,
      32% 57%,
      2% 35%,
      39% 35%
    );
    z-index: 2;
  }

  .ai-product-carousel__badge-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.badge_text_size }}px;
    font-weight: 900;
    color: {{ block.settings.badge_text_color }};
    text-align: center;
    line-height: 1.1;
    padding: 5px;
  }

  .ai-product-carousel__product-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_name_size }}px;
    font-weight: 700;
    color: {{ block.settings.product_name_color }};
    text-transform: uppercase;
    text-align: center;
    margin: 0 0 10px;
    line-height: 1.2;
  }

  .ai-product-carousel__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    font-weight: 600;
    color: {{ block.settings.price_color }};
    text-align: center;
    margin: 0 0 15px;
  }

  .ai-product-carousel__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    text-align: center;
    line-height: 1.4;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .ai-product-carousel__navigation-{{ ai_gen_id }} {
    display: flex;
    gap: 15px;
    justify-content: flex-end;
    margin-top: 30px;
  }

  .ai-product-carousel__nav-button-{{ ai_gen_id }} {
    width: {{ block.settings.nav_button_size }}px;
    height: {{ block.settings.nav_button_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.nav_button_color }};
    border: {{ block.settings.nav_button_border_width }}px solid {{ block.settings.nav_button_border_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  .ai-product-carousel__nav-button-{{ ai_gen_id }}:hover {
    transform: scale(1.05);
  }

  .ai-product-carousel__nav-button-{{ ai_gen_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .ai-product-carousel__nav-button-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
    stroke: {{ block.settings.nav_arrow_color }};
    stroke-width: 3;
  }

  .ai-product-carousel__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
    font-size: 16px;
  }

  @media screen and (max-width: 749px) {
