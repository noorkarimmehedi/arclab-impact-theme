{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-tab-collections-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-tab-collections__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-tab-collections__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
  }

  .ai-tab-collections__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.subheading_spacing }}px;
    font-weight: {{ block.settings.heading_weight }};
  }

  .ai-tab-collections__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
  }

  .ai-tab-collections__tabs-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.tab_spacing }}px;
    margin-bottom: {{ block.settings.content_spacing }}px;
    border-bottom: {{ block.settings.tab_border_width }}px solid {{ block.settings.tab_border_color }};
    overflow-x: auto;
    scrollbar-width: thin;
    {% if block.settings.tabs_alignment == 'center' %}
      justify-content: center;
    {% elsif block.settings.tabs_alignment == 'right' %}
      justify-content: flex-end;
    {% endif %}
  }

  .ai-tab-collections__tab-{{ ai_gen_id }} {
    padding: {{ block.settings.tab_padding_vertical }}px {{ block.settings.tab_padding_horizontal }}px;
    background: {{ block.settings.tab_background }};
    color: {{ block.settings.tab_text_color }};
    border: none;
    cursor: pointer;
    font-size: {{ block.settings.tab_font_size }}px;
    font-weight: {{ block.settings.tab_font_weight }};
    border-radius: {{ block.settings.tab_border_radius }}px {{ block.settings.tab_border_radius }}px 0 0;
    transition: all 0.3s ease;
    white-space: nowrap;
    position: relative;
  }

  .ai-tab-collections__tab-{{ ai_gen_id }}:hover {
    background: {{ block.settings.tab_hover_background }};
    color: {{ block.settings.tab_hover_text_color }};
  }

  .ai-tab-collections__tab-{{ ai_gen_id }}.active {
    background: {{ block.settings.tab_active_background }};
    color: {{ block.settings.tab_active_text_color }};
  }

  .ai-tab-collections__tab-{{ ai_gen_id }}.active::after {
    content: '';
    position: absolute;
    bottom: -{{ block.settings.tab_border_width }}px;
    left: 0;
    right: 0;
    height: {{ block.settings.tab_active_border_height }}px;
    background: {{ block.settings.tab_active_border_color }};
  }

  .ai-tab-collections__content-{{ ai_gen_id }} {
    display: none;
  }

  .ai-tab-collections__content-{{ ai_gen_id }}.active {
    display: block;
  }

  .ai-tab-collections__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  @media screen and (min-width: 750px) {
    .ai-tab-collections__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (min-width: 990px) {
    .ai-tab-collections__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    }
  }

  .ai-tab-collections__product-card-{{ ai_gen_id }} {
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    {% if block.settings.card_shadow %}
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    {% endif %}
  }

  .ai-tab-collections__product-card-{{ ai_gen_id }}:hover {
    {% if block.settings.card_hover_effect == 'lift' %}
      transform: translateY(-5px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
    {% elsif block.settings.card_hover_effect == 'scale' %}
      transform: scale(1.02);
    {% endif %}
  }

  .ai-tab-collections__product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    background: #f4f4f4;
  }

  .ai-tab-collections__product-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  {% if block.settings.image_hover_effect == 'zoom' %}
    .ai-tab-collections__product-card-{{ ai_gen_id }}:hover .ai-tab-collections__product-image-{{ ai_gen_id }} {
      transform: scale(1.1);
    }
  {% endif %}

  .ai-tab-collections__product-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 10px;
    left: 10px;
    background: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: 5px 10px;
    border-radius: {{ block.settings.badge_border_radius }}px;
    font-size: {{ block.settings.badge_font_size }}px;
    font-weight: 600;
  }

  .ai-tab-collections__product-info-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    text-align: {{ block.settings.product_info_alignment }};
  }

  .ai-tab-collections__product-vendor-{{ ai_gen_id }} {
    font-size: {{ block.settings.vendor_font_size }}px;
    color: {{ block.settings.vendor_color }};
    margin: 0 0 5px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-tab-collections__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 10px;
    font-weight: {{ block.settings.product_title_weight }};
  }

  .ai-tab-collections__product-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-tab-collections__product-title-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-tab-collections__product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_font_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: {{ block.settings.price_font_weight }};
  }

  .ai-tab-collections__product-price--compare-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.6;
    margin-right: 8px;
  }

  .ai-tab-collections__product-price--sale-{{ ai_gen_id }} {
    color: {{ block.settings.sale_price_color }};
  }

  .ai-tab-collections__view-all-{{ ai_gen_id }} {
    text-align: {{ block.settings.button_alignment }};
    margin-top: {{ block.settings.button_spacing }}px;
  }

  .ai-tab-collections__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-tab-collections__button-{{ ai_gen_id }}:hover {
    background: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-tab-collections__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #999;
  }

  .ai-tab-collections__empty-state-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    margin-bottom: 20px;
    opacity: 0.3;
  }
{% endstyle %}

<tab-collections-{{ ai_gen_id }} class="ai-tab-collections-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-tab-collections__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-tab-collections__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-tab-collections__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-tab-collections__subtitle-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-tab-collections__tabs-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign collection_key = 'collection_' | append: i
          assign tab_label_key = 'tab_label_' | append: i
          assign collection = block.settings[collection_key]
          assign tab_label = block.settings[tab_label_key]
        %}
        {% if collection != blank %}
          <button
            class="ai-tab-collections__tab-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
            data-tab="{{ i }}"
            aria-label="View {{ tab_label | default: collection.title }}"
          >
            {{ tab_label | default: collection.title }}
          </button>
        {% endif %}
      {% endfor %}
    </div>

    {% for i in (1..5) %}
      {% liquid
        assign collection_key = 'collection_' | append: i
        assign collection = block.settings[collection_key]
      %}
      {% if collection != blank %}
        <div
          class="ai-tab-collections__content-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
          data-content="{{ i }}"
        >
          {% if collection.products.size > 0 %}
            <div class="ai-tab-collections__grid-{{ ai_gen_id }}">
              {% for product in collection.products limit: block.settings.products_per_tab %}
                <div class="ai-tab-collections__product-card-{{ ai_gen_id }}">
                  <div class="ai-tab-collections__product-image-wrapper-{{ ai_gen_id }}">
                    {% if product.featured_image %}
                      <img
                        src="{{ product.featured_image | image_url: width: 600 }}"
                        alt="{{ product.featured_image.alt | escape }}"
                        class="ai-tab-collections__product-image-{{ ai_gen_id }}"
                        loading="lazy"
                        width="600"
                        height="600"
                      >
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag }}
                    {% endif %}

                    {% if block.settings.show_badges %}
                      {% if product.available == false %}
                        <span class="ai-tab-collections__product-badge-{{ ai_gen_id }}">
                          {{ block.settings.sold_out_text }}
                        </span>
                      {% elsif product.compare_at_price > product.price %}
                        <span class="ai-tab-collections__product-badge-{{ ai_gen_id }}">
                          {{ block.settings.sale_text }}
                        </span>
                      {% endif %}
                    {% endif %}
                  </div>

                  <div class="ai-tab-collections__product-info-{{ ai_gen_id }}">
                    {% if block.settings.show_vendor and product.vendor != blank %}
                      <p class="ai-tab-collections__product-vendor-{{ ai_gen_id }}">{{ product.vendor }}</p>
                    {% endif %}

                    <h3 class="ai-tab-collections__product-title-{{ ai_gen_id }}">
                      <a href="{{ product.url }}">{{ product.title }}</a>
                    </h3>

                    {% if block.settings.show_price %}
                      <div class="ai-tab-collections__product-price-{{ ai_gen_id }}">
                        {% if product.compare_at_price > product.price %}
                          <span class="ai-tab-collections__product-price--compare-{{ ai_gen_id }}">
                            {{ product.compare_at_price | money }}
                          </span>
                          <span class="ai-tab-collections__product-price--sale-{{ ai_gen_id }}">
                            {{ product.price | money }}
                          </span>
                        {% else %}
                          {{ product.price | money }}
                        {% endif %}
                      </div>
                    {% endif %}
                  </div>
                </div>
              {% endfor %}
            </div>

            {% if block.settings.show_view_all %}
              <div class="ai-tab-collections__view-all-{{ ai_gen_id }}">
                <a href="{{ collection.url }}" class="ai-tab-collections__button-{{ ai_gen_id }}">
                  {{ block.settings.view_all_text }}
                </a>
              </div>
            {% endif %}
          {% else %}
            <div class="ai-tab-collections__empty-state-{{ ai_gen_id }}">
              {{ 'collection-1' | placeholder_svg_tag }}
              <p>No products found in this collection</p>
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</tab-collections-{{ ai_gen_id }}>

<script>
  (function() {
    class TabCollections{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.ai-tab-collections__tab-{{ ai_gen_id }}');
        this.contents = this.querySelectorAll('.ai-tab-collections__content-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', () => {
            const tabId = tab.getAttribute('data-tab');
            this.switchTab(tabId);
          });
        });
      }

      switchTab(tabId) {
        this.tabs.forEach((tab) => {
          if (tab.getAttribute('data-tab') === tabId) {
            tab.classList.add('active');
          } else {
            tab.classList.remove('active');
          }
        });

        this.contents.forEach((content) => {
          if (content.getAttribute('data-content') === tabId) {
            content.classList.add('active');
          } else {
            content.classList.remove('active');
          }
        });
      }
    }

    customElements.define('tab-collections-{{ ai_gen_id }}', TabCollections{{ ai_gen_id }});
  })();
</script>

